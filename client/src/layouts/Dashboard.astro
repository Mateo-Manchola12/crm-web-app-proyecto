---
import '@css/global.css'
import '@fontsource/roboto'

import { ClientRouter } from 'astro:transitions'

import Toaster from '@components/ui/Toaster'
import Flash from '@/components/ui/Flash'
import Aside from '@components/layout/dashboard/Aside.astro'
interface Props {
    title: string
}

const { title } = Astro.props as Props
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <ClientRouter transition:animate="slide" />
    </head>
    <body
        class="font-roboto bg-background min-h-screen overflow-x-hidden text-gray-600 md:grid md:grid-cols-[250px_1fr]"
    >
        <Toaster client:load transition:persist transition:name="toaster-element" />
        <Flash client:load transition:name="flash-element" />
        <Aside />
        <main class="z-30 overflow-y-scroll h-screen relative">
            <slot />
        </main>
    </body>
</html>

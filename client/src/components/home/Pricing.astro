---
import { tiers } from '@data/pricing'
import PricingCard from '@components/home/PricingCard.astro'
---

<section class="max-w-screen px-2 md:px-10 xl:max-w-7xl">
    <h2 class="mt-20 mb-5 w-full text-center text-3xl md:text-4xl font-bold">
        Es hora de que empieces a <strong>fluir</strong>
    </h2>
    <div id="pricing" class="gap-15 flex w-full flex-row justify-around overflow-x-auto px-10 py-5">
        {Object.entries(tiers).map(([key, tier]) => <PricingCard {...tier} />)}
    </div>
</section>
<style>
    #pricing > :global(article) {
        scroll-snap-align: center;
    }
    #pricing {
        scroll-snap-type: x mandatory;
    }
</style>

            href="/signup"
            class="from-primary to-primary/70 text-on-primary shadow-primary/60 hover:to-primary hover:from-primary/70 mt-4 rounded-xl bg-gradient-to-r px-4 py-2 text-center text-xl font-bold shadow-xl transition-colors md:w-2/3"

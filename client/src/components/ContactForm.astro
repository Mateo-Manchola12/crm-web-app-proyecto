---
import { tiers } from '../data/pricing'
import Dropdown from './blocks/Dropdown.astro'
import GetDataForm from './blocks/GetDataForm.astro'
---

<GetDataForm action="/contact" buttonText="Enviar" labelBy="contact-form-title">
    <Dropdown
        slot="custom-fields"
        label="Plan de interés"
        name="plan"
        placeholder="Seleccionar un plan"
        ariaLabel="Plan de interés"
        options={Object.keys(tiers).map((key) => ({
            value: key.toLowerCase(),
            label: key.charAt(0).toUpperCase() + key.slice(1),
        }))}
    />
</GetDataForm>

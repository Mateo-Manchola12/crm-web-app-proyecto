{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@layout": ["src/layouts/Layout.astro"],
            "@layouts/*": ["src/layouts/*"],
            "@assets/*": ["src/assets/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@utils/*": ["src/utils/*"],
            "@styles/*": ["src/styles/*"],
            "@public/*": ["public/*"],
            "@types/*": ["src/types/*"],
            "@constants/*": ["src/constants/*"],
            "@svg/*": ["src/svg/*"],
            "@js/*": ["src/js/*"]
        }
    }
}
